            android:text="Vacante"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVacante"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center|start"
